{
  "name": "personal-website",
  "version": "1.0.0",
  "description": "Mark Perfecto's Personal Website",
  "main": "server.js",
  "scripts": {
    "dev": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "serve": "npx live-server --port=3000",
    "dev:server": "node server.js"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "live-server": "^1.2.2"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "sanitize-html": "^2.13.1"
  },
  "keywords": ["personal", "website", "portfolio", "modern"],
  "author": "Mark Perfecto",
  "license": "MIT"
}
